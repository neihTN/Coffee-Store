<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Profile"
        android:textColor="#001833"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:src="@drawable/ic_left_arrow"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/header"
        app:layout_constraintBottom_toBottomOf="@+id/header"/>

    <ImageView
        android:id="@+id/user_icon_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/circle_background"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_user"
        app:layout_constraintStart_toStartOf="@id/user_icon_background"
        app:layout_constraintEnd_toEndOf="@id/user_icon_background"
        app:layout_constraintTop_toTopOf="@+id/user_icon_background"
        app:layout_constraintBottom_toBottomOf="@id/user_icon_background"/>

    <ImageView
        android:id="@+id/phone_icon_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/circle_background"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_icon_background"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_phone"
        app:layout_constraintStart_toStartOf="@id/phone_icon_background"
        app:layout_constraintEnd_toEndOf="@id/phone_icon_background"
        app:layout_constraintTop_toTopOf="@id/phone_icon_background"
        app:layout_constraintBottom_toBottomOf="@id/phone_icon_background"/>

    <ImageView
        android:id="@+id/mail_icon_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/circle_background"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_icon_background"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_mail"
        app:layout_constraintStart_toStartOf="@id/mail_icon_background"
        app:layout_constraintEnd_toEndOf="@id/mail_icon_background"
        app:layout_constraintTop_toTopOf="@id/mail_icon_background"
        app:layout_constraintBottom_toBottomOf="@id/mail_icon_background"/>

    <ImageView
        android:id="@+id/address_icon_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/circle_background"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mail_icon_background"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_address"
        app:layout_constraintStart_toStartOf="@id/address_icon_background"
        app:layout_constraintEnd_toEndOf="@id/address_icon_background"
        app:layout_constraintTop_toTopOf="@id/address_icon_background"
        app:layout_constraintBottom_toBottomOf="@id/address_icon_background"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:text="Full name"
        android:fontFamily="@font/poppins_regular"
        android:textSize="10sp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toEndOf="@+id/user_icon_background"
        app:layout_constraintTop_toTopOf="@id/user_icon_background" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_regular"
        android:text="Anderson"
        android:textColor="#324A59"
        android:layout_marginStart="15dp"
        app:layout_constraintEnd_toStartOf="@+id/edit_name_button"
        app:layout_constraintStart_toEndOf="@+id/user_icon_background"
        app:layout_constraintBottom_toBottomOf="@id/user_icon_background"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:text="Phone number"
        android:fontFamily="@font/poppins_regular"
        android:textSize="10sp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toEndOf="@+id/user_icon_background"
        app:layout_constraintTop_toTopOf="@id/phone_icon_background" />

    <TextView
        android:id="@+id/user_phone_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_regular"
        android:text="+60134589525"
        android:textColor="#324A59"
        app:layout_constraintEnd_toStartOf="@+id/edit_phone_number_button"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@+id/phone_icon_background"
        app:layout_constraintBottom_toBottomOf="@id/phone_icon_background"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:text="Email"
        android:fontFamily="@font/poppins_regular"
        android:textSize="10sp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toEndOf="@+id/mail_icon_background"
        app:layout_constraintTop_toTopOf="@id/mail_icon_background" />

    <TextView
        android:id="@+id/user_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_regular"
        android:text="Anderson@email.com"
        android:textColor="#324A59"
        android:layout_marginStart="15dp"
        app:layout_constraintEnd_toStartOf="@+id/edit_mail_button"
        app:layout_constraintStart_toEndOf="@+id/mail_icon_background"
        app:layout_constraintBottom_toBottomOf="@id/mail_icon_background"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:text="Address"
        android:fontFamily="@font/poppins_regular"
        android:textSize="10sp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toEndOf="@+id/address_icon_background"
        app:layout_constraintTop_toTopOf="@id/address_icon_background" />

    <TextView
        android:id="@+id/user_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_regular"
        android:text="3 Addersion Court Chino Hills, HO56824, United State"
        android:textColor="#324A59"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toStartOf="@+id/edit_address_button"
        app:layout_constraintTop_toTopOf="@id/address_icon_background"
        app:layout_constraintStart_toEndOf="@+id/address_icon_background" />

    <ImageButton
        android:id="@+id/edit_name_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:src="@drawable/ic_edit"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/user_icon_background"
        app:layout_constraintBottom_toBottomOf="@id/user_icon_background"/>

    <ImageButton
        android:id="@+id/edit_phone_number_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:src="@drawable/ic_edit"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/phone_icon_background"
        app:layout_constraintBottom_toBottomOf="@id/phone_icon_background"/>

    <ImageButton
        android:id="@+id/edit_mail_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_edit"
        android:minWidth="48dp"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/mail_icon_background"
        app:layout_constraintBottom_toBottomOf="@id/mail_icon_background"/>

    <ImageButton
        android:id="@+id/edit_address_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_edit"
        android:minWidth="48dp"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/address_icon_background"
        app:layout_constraintBottom_toBottomOf="@id/address_icon_background"/>

</androidx.constraintlayout.widget.ConstraintLayout>