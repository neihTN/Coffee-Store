<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/coffee_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#324A59"
        android:textSize="12sp"
        android:text="Coffee Name"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/order_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:textSize="10sp"
        android:fontFamily="@font/poppins_regular"
        android:text="Date Time"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/coffee_name"
        app:layout_constraintTop_toBottomOf="@id/coffee_name"/>

    <TextView
        android:id="@+id/plus_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#324A59"
        android:textSize="16sp"
        android:text="+ 12 Pts"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/coffee_name"
        app:layout_constraintBottom_toBottomOf="@+id/order_date"/>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#F4F5F7"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/order_date"
        app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>