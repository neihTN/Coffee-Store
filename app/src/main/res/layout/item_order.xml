<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/order_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:textSize="11sp"
        android:fontFamily="@font/poppins_regular"
        android:text="Date Time"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/coffee_cup_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_coffee_cup"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/order_date"
        app:layout_constraintStart_toStartOf="@+id/order_date"/>

    <TextView
        android:id="@+id/coffee_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#324A59"
        android:textSize="10sp"
        android:fontFamily="@font/poppins_regular"
        android:text="Coffee Name"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/coffee_cup_icon"
        app:layout_constraintTop_toTopOf="@+id/coffee_cup_icon"/>

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$3.00"
        android:fontFamily="@font/poppins_regular"
        android:textColor="#324A59"
        android:textSize="16sp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toTopOf="@id/order_date"
        app:layout_constraintBottom_toBottomOf="@id/coffee_cup_icon"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/address_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_address"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/coffee_cup_icon"
        app:layout_constraintStart_toStartOf="@+id/order_date"/>

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#324A59"
        android:textSize="10sp"
        android:fontFamily="@font/poppins_regular"
        android:text="3 Addersion Court Chino Hills, HO56824, United State"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/coffee_cup_icon"
        app:layout_constraintTop_toTopOf="@+id/address_icon"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#F4F5F7"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/address_icon"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>